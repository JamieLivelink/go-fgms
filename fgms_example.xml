<!--
    Example configuration file for fgms
    Copy this file to "fgms.conf" and edit
    its content!
-->

<PropertyList>
  <multiplayer>

    <server>
      <!-- name of the server -->
      <name>os-devel</name>
      <!-- listening port -->
      <port>5000</port>
      <address>127.0.0.1</address>
      <!-- port for telnet, default port+1 -->
      <telnet_port>5001</telnet_port>
      <!-- port for admin commands -->
      <admin_port>6000</admin_port>
      <!-- write logs to this file -->
      <logfile>server.log</logfile>
      <!-- if set to true, fg_server will run in the background -->
      <daemon>false</daemon>
      <!-- mark a relay as inactive after 10 seconds -->
      <relay_ttl>20</relay_ttl>
      <!-- send an update every second to inactive relays -->
      <update_inactive_period>1</update_inactive_period>
      <!-- the protocol specification -->
      <protospec>../../mp-proto-spec.xml</protospec>
      <!--
       if set to true, fgms will act as a HUB server
       a HUB server will resend packets received from
       relays to all other relays
      -->
      <is_hub>false</is_hub>

      <!-- Tracking server -->
      <tracking_server>
        <!-- set "server.tracked" = true to use it -->
        <is_tracked>false</is_tracked>
        <host>62.112.194.20</host>
        <port>8000</port>
        <childs>3</childs>
      </tracking_server>

      <!-- list of relay servers -->
      <relaylist>
        <relay>
          <name>Pigeon, China</name>
          <host>mpserver02.flightgear.org</host>
          <port>5000</port>
          <type>node</type>
          <password>NOT_USED_YES</password>
        </relay>
        <relay>
          <name> mpserver06/hugin - Gothenburg, Sweden</name>
          <host>mpserver06.flightgear.org</host>
          <port>5000</port>
          <type>hub</type>
          <password>NOT_USED_YES</password>
        </relay>
      </relaylist>
      <crossfeedlist>
        <crossfeed>
          <name>localhost develserver</name>
          <host>localhost</host>
          <port>5003</port>
        </crossfeed>
      </crossfeedlist>
      <blacklist>
        <address>1.2.3.4</address>
        <address>5.6.7.8</address>
      </blacklist>
    </server>

    <system>
      <!-- the protocol version we use -->
      <protoversion>
        <major>2</major>
        <minor>0</minor>
      </protoversion>
      <!-- resend reliable UDP packets after 5 seconds -->
      <resendtime>5</resendtime>
      <!-- maximum retries to resend reliable UDP packets -->
      <maxretries>3</maxretries>
      <!-- time to keep client information in list
           without updates in seconds -->
      <client_ttl>10</client_ttl>
      <!-- only forward data to clients which are really
           nearby the sender. distance in nautical miles -->
      <out_of_reach>100</out_of_reach>
    </system>

  </multiplayer>
</PropertyList>